<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/ayuntamiento_gold">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/escudo_cobreros"
        android:contentDescription="Escudo del Ayuntamiento de Cobreros" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Ayuntamiento de Cobreros"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Sistema de Notificaciones"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Panel de Administración"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_ayuntamiento"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestionar Notificaciones"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_outline_ayuntamiento"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Recibirás notificaciones automáticas del ayuntamiento"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        android:layout_marginTop="32dp"
        android:gravity="center" />

</LinearLayout>

