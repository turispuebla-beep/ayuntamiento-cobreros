<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ayuntamiento_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con escudo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/escudo_cobreros"
                android:contentDescription="Escudo de Cobreros" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸ Ayuntamiento de Cobreros"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/ayuntamiento_blue"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Ciudadano"
                android:textSize="18sp"
                android:textColor="@color/ayuntamiento_blue"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Formulario de registro -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nombreEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre *"
                        android:inputType="textPersonName"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Apellidos -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/apellidosEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellidos *"
                        android:inputType="textPersonName"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email *"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- TelÃ©fono -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/telefonoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TelÃ©fono *"
                        android:inputType="phone"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ContraseÃ±a -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ContraseÃ±a *"
                        android:inputType="textPassword"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirmar ContraseÃ±a -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmar ContraseÃ±a *"
                        android:inputType="textPassword"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Notificaciones -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” Notificaciones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="16dp" />

                <CheckBox
                    android:id="@+id/notificationConsentCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiero recibir notificaciones push del Ayuntamiento"
                    android:textColor="@color/ayuntamiento_blue"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Localidades -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Localidades de InterÃ©s"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona las localidades de las que quieres recibir notificaciones:"
                    android:textSize="14sp"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/localitiesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Registrarse"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_ayuntamiento"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/backToLoginButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Volver al Login"
                android:textSize="16sp"
                android:background="@drawable/button_outline_ayuntamiento"
                android:textColor="@color/ayuntamiento_blue" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
