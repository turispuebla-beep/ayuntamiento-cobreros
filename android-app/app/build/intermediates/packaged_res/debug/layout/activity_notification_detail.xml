<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ayuntamiento_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con escudo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/escudo_cobreros"
                android:contentDescription="Escudo de Cobreros" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸ Ayuntamiento de Cobreros"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ayuntamiento_blue"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- Detalles de la notificaciÃ³n -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- TÃ­tulo -->
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TÃ­tulo de la notificaciÃ³n"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="12dp" />

                <!-- Tipo -->
                <TextView
                    android:id="@+id/typeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›ï¸ GENERAL"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/ayuntamiento_blue"
                    android:background="@drawable/type_badge"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp" />

                <!-- Mensaje -->
                <TextView
                    android:id="@+id/messageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mensaje de la notificaciÃ³n"
                    android:textSize="16sp"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="12dp" />

                <!-- Localidades -->
                <TextView
                    android:id="@+id/localitiesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Localidades"
                    android:textSize="14sp"
                    android:textColor="@color/ayuntamiento_blue"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Archivo adjunto -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Ž Archivo Adjunto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="16dp" />

                <!-- Imagen del archivo -->
                <ImageView
                    android:id="@+id/attachmentImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="@color/ayuntamiento_blue_light"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <!-- Botones de acciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/downloadButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ“¥ Descargar"
                        android:textSize="14sp"
                        android:background="@drawable/button_ayuntamiento"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/openButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ‘ï¸ Abrir"
                        android:textSize="14sp"
                        android:background="@drawable/button_ayuntamiento"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ“¤ Compartir NotificaciÃ³n"
                    android:textSize="14sp"
                    android:background="@drawable/button_outline_ayuntamiento"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
