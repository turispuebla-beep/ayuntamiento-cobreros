<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ayuntamiento_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con escudo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/escudo_cobreros"
                android:contentDescription="Escudo de Cobreros" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏛️ Ayuntamiento de Cobreros"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/ayuntamiento_blue"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceso de Administrador"
                android:textSize="18sp"
                android:textColor="@color/ayuntamiento_blue"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Formulario de login -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email de administrador *"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/ayuntamiento_blue"
                    app:hintTextColor="@color/ayuntamiento_blue"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña *"
                        android:inputType="textPassword"
                        android:textColor="@color/ayuntamiento_blue" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón de login -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔐 Iniciar Sesión"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_ayuntamiento"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Botón de volver -->
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="← Volver"
                    android:textSize="16sp"
                    android:background="@drawable/button_outline_ayuntamiento"
                    android:textColor="@color/ayuntamiento_blue" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Información -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Información"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ayuntamiento_blue"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Solo administradores autorizados pueden acceder\n• Las notificaciones se envían a usuarios de la APK\n• Se puede filtrar por localidades específicas"
                    android:textSize="14sp"
                    android:textColor="@color/ayuntamiento_blue"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
